# AgriIQ Production Environment Configuration
# Copy this file to .env and fill in your actual credentials

# Server Configuration
NODE_ENV=production
PORT=5000
API_BASE_URL=https://api.agriiq.com
WEB_BASE_URL=https://agriiq.com

# Database
MONGODB_URI=mongodb+srv://<username>:<password>@cluster.mongodb.net/agriiq?retryWrites=true&w=majority

# JWT Secret (Generate a strong random string)
JWT_SECRET=<your-256-bit-secret-key>
JWT_REFRESH_SECRET=<your-256-bit-refresh-secret-key>
JWT_EXPIRY=7h
JWT_REFRESH_EXPIRY=30d

# Razorpay Payment Gateway
RAZORPAY_KEY_ID=rzp_live_<your-key-id>
RAZORPAY_KEY_SECRET=<your-key-secret>
RAZORPAY_WEBHOOK_SECRET=<your-webhook-secret>

# Firebase Configuration
FIREBASE_PROJECT_ID=<your-project-id>
FIREBASE_CLIENT_EMAIL=<service-account-email>
FIREBASE_PRIVATE_KEY=<your-private-key>
FIREBASE_DATABASE_URL=https://<your-project>.firebaseio.com

# Firebase Cloud Messaging (Push Notifications)
FCM_SERVER_KEY=<your-server-key>

# Email Configuration (SMTP)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=<your-email@gmail.com>
SMTP_PASSWORD=<your-app-password>
EMAIL_FROM="AgriIQ <noreply@agriiq.com>"

# ML Model Configuration
ML_API_ENDPOINT=https://ml.agriiq.com/predict
ML_API_KEY=<your-ml-api-key>

# Image Storage (AWS S3 or similar)
AWS_ACCESS_KEY_ID=<your-access-key>
AWS_SECRET_ACCESS_KEY=<your-secret-key>
AWS_REGION=ap-south-1
AWS_S3_BUCKET=agriiq-images

# OpenAI (Optional - for AI bot fallback)
OPENAI_API_KEY=<your-openai-api-key>

# Analytics
GOOGLE_ANALYTICS_ID=G-<your-measurement-id>

# Rate Limiting
RATE_LIMIT_WINDOW=15
RATE_LIMIT_MAX_REQUESTS=100

# File Upload Limits
MAX_FILE_SIZE=10485760
MAX_FILES_PER_REQUEST=5

# Session Configuration
SESSION_SECRET=<your-session-secret>

# CORS Configuration
CORS_ORIGIN=https://agriiq.com,https://www.agriiq.com

# Logging
LOG_LEVEL=info
LOG_FILE=logs/production.log

# Feature Flags
ENABLE_AI_BOT=true
ENABLE_OFFLINE_MODE=true
FREE_ANALYSIS_LIMIT=3

# Commission Split (Platform % | Agronomist %)
PLATFORM_COMMISSION=30
AGRONOMIST_COMMISSION=70

# Pricing (in INR)
DETAILED_REPORT_PRICE=99
CONSULTATION_PRICE=199
GST_PERCENTAGE=18