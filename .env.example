# ============================================
# AGRIIQ - PLANT HEALTH DIAGNOSIS TOOL
# ============================================
# Copy this file to .env and fill in your values

# ==================
# DATABASE (MySQL)
# ==================
DB_HOST=localhost
DB_PORT=3306
DB_USER=root
DB_PASSWORD=your-database-password
DB_NAME=agriiq_db

# ==================
# JWT AUTHENTICATION
# ==================
JWT_SECRET_KEY=your-super-secret-jwt-key-change-this-in-production
JWT_EXPIRY=25200
# JWT_EXPIRY in seconds (25200 = 7 hours)

# ==================
# EMAIL CONFIGURATION (SMTP)
# ==================
# Use Gmail SMTP or your own mail server
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USE_TLS=True
SMTP_USERNAME=your-email@gmail.com
SMTP_PASSWORD=your-app-specific-password
SMTP_FROM_EMAIL=noreply@agriiq.com
SMTP_FROM_NAME=AgriIQ - Plant Health Diagnosis

# ==================
# API CONFIGURATION
# ==================
API_BASE_URL=https://api.agriiq.com
FRONTEND_WEB_URL=https://agriiq.com
FRONTEND_MOBILE_URL=https://app.agriiq.com

# Development URLs (uncomment for local development)
# API_BASE_URL=http://localhost:5000
# FRONTEND_WEB_URL=http://localhost:3000
# FRONTEND_MOBILE_URL=http://localhost:19000

# ==================
# FILE UPLOAD
# ==================
UPLOAD_FOLDER=uploads/
MAX_FILE_SIZE=16777216
# MAX_FILE_SIZE in bytes (16777216 = 16MB)
ALLOWED_EXTENSIONS=png,jpg,jpeg,webp

# ==================
# ML MODEL
# ==================
MODEL_PATH=./ml-model/saved_models/
MODEL_FILE=plant_disease_model.h5
CLASSES_FILE=./ml-model/data/classes.json

# ==================
# FLASK CONFIGURATION
# ==================
FLASK_APP=app.py
FLASK_ENV=production
# Change to 'development' for local testing
FLASK_DEBUG=False
SECRET_KEY=your-flask-secret-key-change-this
PORT=5000

# ==================
# SECURITY
# ==================
CORS_ORIGINS=https://agriiq.com,https://app.agriiq.com,https://www.agriiq.com
# Add http://localhost:3000,http://localhost:19000 for development
RATE_LIMIT=100
# Rate limit per minute

# ==================
# LOGGING
# ==================
LOG_LEVEL=INFO
# Options: DEBUG, INFO, WARNING, ERROR, CRITICAL
LOG_FILE=logs/app.log

# ==================
# CONSULTATION SETTINGS
# ==================
CONSULTATION_FEE=500
# Default consultation fee in INR
PLATFORM_COMMISSION=0.30
# Platform commission (30% = 0.30)
AGRONOMIST_COMMISSION=0.70
# Agronomist commission (70% = 0.70)

# ==================
# PAYMENT GATEWAY (Razorpay)
# ==================
# Add your Razorpay credentials when ready
RAZORPAY_KEY_ID=your_razorpay_key_id
RAZORPAY_KEY_SECRET=your_razorpay_key_secret
RAZORPAY_WEBHOOK_SECRET=your_webhook_secret

# ==================
# CLOUD STORAGE (AWS S3 / Azure / GCS)
# ==================
# AWS S3
AWS_ACCESS_KEY_ID=your_aws_access_key
AWS_SECRET_ACCESS_KEY=your_aws_secret_key
AWS_REGION=ap-south-1
AWS_S3_BUCKET=agriiq-media

# Or use Azure Blob Storage
# AZURE_STORAGE_CONNECTION_STRING=
# AZURE_CONTAINER_NAME=agriiq-media

# ==================
# FIREBASE CLOUD MESSAGING (Push Notifications)
# ==================
FCM_CREDENTIALS_PATH=./config/firebase-credentials.json
FCM_PROJECT_ID=agriiq-app

# ==================
# APPLICATION METADATA
# ==================
APP_NAME=AgriIQ
APP_VERSION=1.0.0
APP_DOMAIN=agriiq.com
SUPPORT_EMAIL=support@agriiq.com
CONTACT_EMAIL=contact@agriiq.com
