# ============================================
# PLANT HEALTH DIAGNOSIS TOOL - CONFIGURATION
# ============================================
# Copy this file to .env and fill in your values

# ==================
# DATABASE (MySQL)
# ==================
DB_HOST=localhost
DB_PORT=3306
DB_USER=root
DB_PASSWORD=gzkrits
DB_NAME=plant_health_db

# ==================
# JWT AUTHENTICATION
# ==================
JWT_SECRET_KEY=your-super-secret-jwt-key-change-this-in-production
JWT_EXPIRY=25200
# JWT_EXPIRY in seconds (25200 = 7 hours)

# ==================
# EMAIL CONFIGURATION (SMTP)
# ==================
# Use Gmail SMTP or your own mail server
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USE_TLS=True
SMTP_USERNAME=your-email@gmail.com
SMTP_PASSWORD=your-app-specific-password
SMTP_FROM_EMAIL=noreply@planthealthapp.com
SMTP_FROM_NAME=Plant Health Diagnosis

# ==================
# API CONFIGURATION
# ==================
API_BASE_URL=http://localhost:5000
FRONTEND_WEB_URL=http://localhost:3000
FRONTEND_MOBILE_URL=http://localhost:19000

# ==================
# FILE UPLOAD
# ==================
UPLOAD_FOLDER=uploads/
MAX_FILE_SIZE=16777216
# MAX_FILE_SIZE in bytes (16777216 = 16MB)
ALLOWED_EXTENSIONS=png,jpg,jpeg,webp

# ==================
# ML MODEL
# ==================
MODEL_PATH=./ml-model/saved_models/
MODEL_FILE=plant_disease_model.h5
CLASSES_FILE=./ml-model/data/classes.json

# ==================
# FLASK CONFIGURATION
# ==================
FLASK_APP=app.py
FLASK_ENV=development
# Change to 'production' for deployment
FLASK_DEBUG=True
SECRET_KEY=your-flask-secret-key-change-this
PORT=5000

# ==================
# SECURITY
# ==================
CORS_ORIGINS=http://localhost:3000,http://localhost:19000
RATE_LIMIT=100
# Rate limit per minute

# ==================
# LOGGING
# ==================
LOG_LEVEL=INFO
# Options: DEBUG, INFO, WARNING, ERROR, CRITICAL
LOG_FILE=logs/app.log

# ==================
# CONSULTATION SETTINGS
# ==================
CONSULTATION_FEE=500
# Default consultation fee in INR
PLATFORM_COMMISSION=0.30
# Platform commission (30% = 0.30)
AGRONOMIST_COMMISSION=0.70
# Agronomist commission (70% = 0.70)

# ==================
# PAYMENT GATEWAY (Future)
# ==================
# Add Razorpay/PayU credentials here when implementing payments
# RAZORPAY_KEY_ID=
# RAZORPAY_KEY_SECRET=

# ==================
# AWS S3 (Optional - for production file storage)
# ==================
# AWS_ACCESS_KEY_ID=
# AWS_SECRET_ACCESS_KEY=
# AWS_REGION=
# AWS_S3_BUCKET=

# ==================
# FIREBASE (Optional - if using Firebase)
# ==================
# FIREBASE_PROJECT_ID=
# FIREBASE_PRIVATE_KEY=
# FIREBASE_CLIENT_EMAIL=
