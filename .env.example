# Plant Health Diagnosis Tool - Environment Configuration
# Copy this file to .env and fill in your actual values
# Never commit the actual .env file to version control

# Flask Configuration
FLASK_ENV=development
FLASK_DEBUG=True
SECRET_KEY=your-secret-key-change-this-in-production

# API Configuration
API_PORT=5000
API_HOST=127.0.0.1
CORS_ORIGINS=http://localhost:3000,http://localhost:8000,http://localhost:19000

# JWT Token Configuration
JWT_SECRET_KEY=your-jwt-secret-key-change-this-in-production

# Firebase Configuration
# Get these values from your Firebase project settings
FIREBASE_PROJECT_ID=your-firebase-project-id
FIREBASE_PRIVATE_KEY=your-firebase-private-key
FIREBASE_CLIENT_EMAIL=your-firebase-client-email
FIREBASE_DATABASE_URL=https://your-project.firebaseio.com
FIREBASE_STORAGE_BUCKET=your-project.appspot.com

# Rate Limiting
RATE_LIMIT_ENABLED=True
REQUESTS_PER_HOUR=100
RATE_LIMIT_STORAGE_URL=memory://

# ML Model Configuration
MODEL_PATH=models/plant_disease_model.h5
MODEL_CONFIDENCE_THRESHOLD=0.7
IMAGE_MAX_SIZE=5242880  # 5MB in bytes
IMAGE_INPUT_SIZE=224  # 224x224 for ResNet
IMAGE_QUALITY_MIN_SCORE=0.5

# Image Processing
ALLOWED_IMAGE_EXTENSIONS=jpg,jpeg,png,gif,webp

# Logging
LOG_LEVEL=INFO
LOG_FILE=logs/app.log

# Celery Configuration (for async tasks)
CELERY_BROKER_URL=redis://localhost:6379/0
CELERY_RESULT_BACKEND=redis://localhost:6379/0

# Feature Flags
FEATURE_EXPERT_VALIDATION=True
FEATURE_COMMUNITY_FEEDBACK=True
FEATURE_GEO_AWARE_RECOMMENDATIONS=True
FEATURE_AR_GUIDES=True

# Database Collections
FIRESTORE_COLLECTION_USERS=users
FIRESTORE_COLLECTION_DIAGNOSES=diagnoses
FIRESTORE_COLLECTION_TREATMENTS=treatments
FIRESTORE_COLLECTION_FEEDBACK=treatment_feedback

# Google Maps API (for geo-aware features)
GOOGLE_MAPS_API_KEY=your-google-maps-api-key

# OpenWeather API (for weather-based recommendations)
OPENWEATHER_API_KEY=your-openweather-api-key

# Email Configuration (for notifications)
SMTP_SERVER=smtp.gmail.com
SMTP_PORT=587
SMTP_EMAIL=your-email@gmail.com
SMTP_PASSWORD=your-app-specific-password

# External Services
TWILIO_ACCOUNT_SID=your-twilio-account-sid
TWILIO_AUTH_TOKEN=your-twilio-auth-token
TWILIO_PHONE_NUMBER=+1234567890

# Sentry Error Tracking
SENTRY_DSN=https://key@sentry.io/project-id

# Third-party integrations
GITHUB_TOKEN=your-github-token-for-api-access
KAGGLE_USERNAME=your-kaggle-username
KAGGLE_KEY=your-kaggle-api-key

# Development Tools
DEBUG_REQUESTS=False
PROFILE_REQUESTS=False
