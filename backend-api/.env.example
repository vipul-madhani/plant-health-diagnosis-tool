# ========================================
# SERVER CONFIGURATION
# ========================================
NODE_ENV=development
PORT=8000
API_VERSION=v1

# ========================================
# DATABASE CONFIGURATION
# ========================================
# MongoDB Atlas Connection String
# Get from: https://cloud.mongodb.com/
MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/plant-health-db?retryWrites=true&w=majority

# ========================================
# JWT AUTHENTICATION
# ========================================
# Generate secure random strings for production
# Example: openssl rand -base64 32
JWT_SECRET=your-super-secret-jwt-key-change-in-production
JWT_REFRESH_SECRET=your-super-secret-refresh-key-change-in-production
JWT_EXPIRES_IN=7h
JWT_REFRESH_EXPIRES_IN=30d

# ========================================
# PAYMENT GATEWAY - RAZORPAY
# ========================================
# Get from: https://dashboard.razorpay.com/app/keys
RAZORPAY_KEY_ID=rzp_test_xxxxxxxxxxxxx
RAZORPAY_KEY_SECRET=your_razorpay_secret_key
RAZORPAY_WEBHOOK_SECRET=your_webhook_secret

# Payment amounts in INR (paise)
DETAILED_REPORT_AMOUNT=99
CONSULTATION_AMOUNT=199

# ========================================
# EMAIL CONFIGURATION (SMTP)
# ========================================
# Use Gmail, SendGrid, or any SMTP provider
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-specific-password

# Email sender details
EMAIL_FROM=Plant Health Diagnosis <noreply@planthelp.com>
EMAIL_SUPPORT=support@planthelp.com

# ========================================
# ML MODEL CONFIGURATION
# ========================================
# ML Model API endpoint (Flask/FastAPI)
ML_MODEL_URL=http://localhost:5000
ML_MODEL_API_KEY=optional-api-key-for-ml-service

# ========================================
# FILE STORAGE
# ========================================
# AWS S3 Configuration
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key
AWS_REGION=ap-south-1
AWS_S3_BUCKET=plant-health-images

# Or use local storage for development
STORAGE_TYPE=local
# local | s3
UPLOAD_DIR=./uploads

# ========================================
# WEBSOCKET / REAL-TIME CHAT
# ========================================
SOCKET_PORT=5000
SOCKET_CORS_ORIGIN=http://localhost:19006,exp://192.168.1.100:19000

# ========================================
# FRONTEND URLs (for CORS)
# ========================================
WEB_FRONTEND_URL=http://localhost:3000
MOBILE_APP_URL=exp://localhost:19000
PRODUCTION_WEB_URL=https://yourapp.com
PRODUCTION_MOBILE_URL=https://yourapp.com

# ========================================
# RATE LIMITING
# ========================================
RATE_LIMIT_WINDOW=15
# minutes
RATE_LIMIT_MAX_REQUESTS=100

# ========================================
# LOGGING
# ========================================
LOG_LEVEL=info
# error | warn | info | debug

# ========================================
# FIREBASE (Optional - for push notifications)
# ========================================
FIREBASE_PROJECT_ID=your-project-id
FIREBASE_CLIENT_EMAIL=your-service-account@project.iam.gserviceaccount.com
FIREBASE_PRIVATE_KEY="-----BEGIN PRIVATE KEY-----\nYOUR_PRIVATE_KEY\n-----END PRIVATE KEY-----\n"

# ========================================
# ANALYTICS (Optional)
# ========================================
GOOGLE_ANALYTICS_ID=UA-XXXXXXXXX-X

# ========================================
# PRODUCTION SETTINGS
# ========================================
# Set to true in production
PRODUCTION_MODE=false
ENABLE_SSL=false
SSL_CERT_PATH=/path/to/cert.pem
SSL_KEY_PATH=/path/to/key.pem
