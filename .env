# Copied from backend-api/.env.example with user-provided Razorpay, Firebase, database details to be updated.
# ========================================
# SERVER CONFIGURATION
# ========================================
NODE_ENV=production
PORT=8000
API_VERSION=v1

# ========================================
# DATABASE CONFIGURATION
# ========================================
MONGODB_URI=mongodb+srv://<put-new-username-password-for-your-vps>@cluster.mongodb.net/plant-health-db?retryWrites=true&w=majority

# ========================================
# JWT AUTHENTICATION
# ========================================
JWT_SECRET=your-super-secret-jwt-key-change-in-production
JWT_REFRESH_SECRET=your-super-secret-refresh-key-change-in-production
JWT_EXPIRES_IN=7h
JWT_REFRESH_EXPIRES_IN=30d

# ========================================
# PAYMENT GATEWAY - RAZORPAY
# ========================================
RAZORPAY_KEY_ID=rzp_live_your_actual_key
RAZORPAY_KEY_SECRET=your_actual_secret
RAZORPAY_WEBHOOK_SECRET=your_actual_webhook_secret
DETAILED_REPORT_AMOUNT=99
CONSULTATION_AMOUNT=199

# ========================================
# EMAIL CONFIGURATION (SMTP)
# ========================================
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-password
EMAIL_FROM=AgriIQ <noreply@agriiq.com>
EMAIL_SUPPORT=support@agriiq.com

# ========================================
# ML MODEL CONFIGURATION
# ========================================
ML_MODEL_URL=http://localhost:5000
ML_MODEL_API_KEY=ml-user-key

# ========================================
# FILE STORAGE
# ========================================
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key
AWS_REGION=ap-south-1
AWS_S3_BUCKET=plant-health-images
STORAGE_TYPE=local
UPLOAD_DIR=./uploads

# ========================================
# WEBSOCKET / REAL-TIME CHAT
# ========================================
SOCKET_PORT=5000
SOCKET_CORS_ORIGIN=https://agriiq.com,https://www.agriiq.com

# ========================================
# FRONTEND URLs (for CORS)
# ========================================
WEB_FRONTEND_URL=https://agriiq.com
MOBILE_APP_URL=exp://localhost:19000
PRODUCTION_WEB_URL=https://agriiq.com
PRODUCTION_MOBILE_URL=https://agriiq.com

# ========================================
# RATE LIMITING
# ========================================
RATE_LIMIT_WINDOW=15
RATE_LIMIT_MAX_REQUESTS=100

# ========================================
# LOGGING
# ========================================
LOG_LEVEL=info

# ========================================
# FIREBASE (Push notifications)
# ========================================
FIREBASE_PROJECT_ID=your-project-id
FIREBASE_CLIENT_EMAIL=your-service-account@project.iam.gserviceaccount.com
FIREBASE_PRIVATE_KEY="-----BEGIN PRIVATE KEY-----\nYOUR_PRIVATE_KEY\n-----END PRIVATE KEY-----\n"

# ========================================
# ANALYTICS (Optional)
# ========================================
GOOGLE_ANALYTICS_ID=UA-XXXXXXXXX-X
PRODUCTION_MODE=true
ENABLE_SSL=false
SSL_CERT_PATH=/path/to/cert.pem
SSL_KEY_PATH=/path/to/key.pem
